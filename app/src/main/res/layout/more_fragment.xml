<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.more">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="615dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="¿Que es ARK?"
                android:textAlignment="center"
                android:textColor="#686868"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="ARK es una aplicación que te permitirá buscar la mejor alternativa para el cruce de animales para la ganaderia, asi como tambien, te permitirá consultar la información especifica de los animales, esto ayudara a saber la temperatura que pueden soportar y distintos factores para saber cual es el mejor territorio para poder vivir"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/vacaa" />


        </LinearLayout>
    </ScrollView>
</FrameLayout>